<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_room"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:elevation="10px"
    card_view:cardBackgroundColor="@color/whiteColor"
    card_view:cardCornerRadius="3dp"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    >
    <LinearLayout
        android:id="@+id/room_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:id="@+id/room_Title_follower"
    android:orientation="horizontal">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"></TableRow>

    <TextView
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:text="Room Title"
        android:textSize="18dp"
        android:textColor="@color/title_color"
        android:id="@+id/room_title"
        android:layout_weight="1" />
    <Button
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:text="@string/follow"
        android:layout_weight="0"
        android:background="@color/line_color"
        android:textColor="@color/whiteColor"
        android:id="@+id/follow_room_button" />

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/content_abstract_color"
        android:padding="10dp"
        android:text="This is a room description. it can be a long description or a short one, the card will fit for the content."
        android:id="@+id/room_description" />

 </LinearLayout>


</android.support.v7.widget.CardView>